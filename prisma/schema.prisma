// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "cockroachdb"
  url      = env("DATABASE_URL")
}

model Widget {
  id String @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
}

model Admin {
  id       Int    @unique @default(sequence())
  email    String @unique
  password String
}

model PL {
  id        Int    @id @default(sequence())
  kode      String
  deskripsi String
  CPL       CPL[]  @relation("cpl_pl")
}

model CPL {
  id         Int    @id @default(sequence())
  kode       String
  deskripsi  String
  keterangan String
  BK         BK[]   @relation("cpl_bk")
  PL         PL[]   @relation("cpl_pl")
  CPMK       CPMK[] @relation("cpmk_cpl")
}

model BK {
  id        Int    @id @default(sequence())
  kode      String
  deskripsi String
  min       Int
  max       Int
  CPL       CPL[]  @relation("cpl_bk")
  MK        MK[]   @relation("bk_mk")
}

model MK {
  id        Int    @id @default(sequence())
  kode      String
  deskripsi String
  BK        BK[]   @relation("bk_mk")
  CPMK      CPMK[] @relation("cpmk_mk")
}

model CPMK {
  id        Int    @id @default(sequence())
  kode      String
  deskripsi String
  CPL       CPL[]  @relation("cpmk_cpl")
  MK        MK[]   @relation("cpmk_mk")
}
